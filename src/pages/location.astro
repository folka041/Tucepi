const restaurants = [
  {
    name: "Ocean's Edge",
    cuisine: "Fine Dining",
    distance: "3 min walk",
    rating: 4.8,
    description: "Award-winning restaurant specializing in fresh seafood and ocean views."
  },
  {
    name: "Beachside Grill",
    cuisine: "Casual Dining",
    distance: "5 min walk",
    rating: 4.6,
    description: "Relaxed beachfront dining with grilled specialties and tropical cocktails."
  },
  {
    name: "Marina Caf√©",
    cuisine: "Breakfast & Brunch",
    distance: "7 min walk",
    rating: 4.7,
    description: "Popular breakfast spot with fresh pastries and artisan coffee."
  },
  {
    name: "Sunset Lounge",
    cuisine: "Bar & Tapas",
    distance: "4 min walk",
    rating: 4.5,
    description: "Rooftop bar with craft cocktails and small plates, perfect for sunset viewing."
  }
];

const transportation = [
  {
    type: "Airport",
    name: "Coastal International Airport",
    distance: "45 min drive",
    description: "Major international airport with direct flights to major cities worldwide."
  },
  {
    type: "Train Station",
    name: "Central Station",
    distance: "30 min drive",
    description: "High-speed rail connections to major metropolitan areas."
  },
  {
    type: "Bus Terminal",
    name: "Coastal Bus Hub",
