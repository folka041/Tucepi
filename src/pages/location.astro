    image: "https://images.pexels.com/photos/1761279/pexels-photo-1761279.jpeg?auto=compress&cs=tinysrgb&w=400&h=300&fit=crop",
    type: "Nature"
  },
  {
    name: "Historic Downtown",
    distance: "20 min drive",
    description: "Charming historic district with boutique shops, galleries, and restaurants.",
    image: "https://images.pexels.com/photos/1134166/pexels-photo-1134166.jpeg?auto=compress&cs=tinysrgb&w=400&h=300&fit=crop",
    type: "Culture"
  },
  {
    name: "Aquarium & Marine Center",
    distance: "25 min drive",
    description: "World-class aquarium featuring local marine life and interactive exhibits.",
    image: "https://images.pexels.com/photos/2156311/pexels-photo-2156311.jpeg?auto=compress&cs=tinysrgb&w=400&h=300&fit=crop",
    type: "Attraction"
  }
