const features = [
  {
    icon: "🏖️",
    title: "Beachfront Location",
    description: "Just steps away from pristine sandy beaches and crystal-clear waters."
  },
  {
    icon: "🌊",
    title: "Ocean Views",
    description: "Wake up to breathtaking panoramic views of the ocean from your private balcony."
  },
  {
    icon: "🏊",
    title: "Swimming Pool",
    description: "Relax in our infinity pool overlooking the ocean with poolside service."
  },
  {
    icon: "🍽️",
    title: "Full Kitchen",
    description: "Modern, fully equipped kitchens with premium appliances and dining areas."
  },
  {
    icon: "📶",
    title: "Free WiFi",
    description: "Stay connected with complimentary high-speed wireless internet throughout."
